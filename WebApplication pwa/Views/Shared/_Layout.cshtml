<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="manifest" href="~/manifest.json">
    <meta name="theme-color" content="#2196f3" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable = no" />
    <title>@ViewData["Title"] - WebApplication_pwa</title>
    <link rel="shortcut icon" type="image/ico" href="https://cordex.com/apple-touch-icon.png" />
    <link rel="icon" type="image/ico" href="https://cordex.com/apple-touch-icon.png" />
    <link rel="apple-touch-icon" type="image/ico" href="https://cordex.com/apple-touch-icon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
    <link rel="stylesheet" href="~/css/flickity.css" media="screen">

    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        html, body {
            overflow-x: hidden; /*lock scroll x*/
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: white;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
            border-right: 1px solid #898181;
        }

            .sidenav a {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
                transition: 0.3s;
            }

                .sidenav a:hover {
                    color: #f1f1f1;
                }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                width: 100%;
            }

            .sidenav .xbtn {
                font-size: 36px;
                margin-left: 175px;
                width: 40px;
                height: 20px;
                padding-left: 45px;
            }

        #imagesOnFooter {
            transform: translate(38%, -10%);
            display: none;
        }
    </style>
    <header>
        <div id="mySidenav" class="sidenav">
            <div class="closebtn">
                <!--<a href="javascript:void(0)" class="xbtn" onclick="OpenOrCloseNav(true)">&times;-->@*&#9776;*@<!--</a>-->
                <div style="background-color: #8cc43d; padding-bottom:10px; padding-top:10px">
                    <img style="display: inline-block; width: 25%; margin-left: 10px; display: inline-block;" src="/149071.png" />
                    <p style="display: inline-block; margin-left: 15px; display: inline-block; font-size: 20px; color: white;">Manuel Alberto</p>
                </div>
            </div>

            <a class="box-shadow" style="margin-top: 30px" asp-controller="Home" asp-action="Leads"><img src="https://www.pikpng.com/pngl/m/255-2557714_gift-vector-blue-box-green-gift-box-vector.png" style="height:40px" />Leads</a>
            <a class="box-shadow" asp-controller="Home" asp-action="Loading"><img src="https://www.pikpng.com/pngl/m/255-2557714_gift-vector-blue-box-green-gift-box-vector.png" style="height:40px" />Quotes</a>
            <a class="box-shadow" asp-controller="Home" asp-action="Clientes"><img src="https://www.pikpng.com/pngl/m/255-2557714_gift-vector-blue-box-green-gift-box-vector.png" style="height:40px" />Clientes</a>
            <a class="box-shadow" asp-controller="Home" asp-action="Encomendas"><img src="https://www.pikpng.com/pngl/m/255-2557714_gift-vector-blue-box-green-gift-box-vector.png" style="height:40px" />Encomendas</a>
            <a class="box-shadow" asp-controller="Home" asp-action="Index"><img src="https://www.pikpng.com/pngl/m/255-2557714_gift-vector-blue-box-green-gift-box-vector.png" style="height:40px" />Reclamações</a>
            <a class="box-shadow" asp-controller="Home" asp-action="Index"><img src="https://www.pikpng.com/pngl/m/255-2557714_gift-vector-blue-box-green-gift-box-vector.png" style="height:40px" />Conta Corrente</a>
            <div style="position:absolute;bottom:0; width:100%;">
                <a class="box-shadow" asp-controller="Home" asp-action="Index">Idioma<img src="https://emojipedia-us.s3.amazonaws.com/source/skype/289/flag-united-states_1f1fa-1f1f8.png" style="height: 25px; padding-left: 16px;" /></a>
                <a class="box-shadow" asp-controller="Home" asp-action="Index">Definições</a>
                <a class="box-shadow" asp-controller="Home" asp-action="Login">Login</a>
            </div>

        </div>
        <div style="margin-top:-7%">
            <span id="openSideBar" style="font-size:30px;cursor:pointer" onclick="OpenOrCloseNav(false)"> <span style="margin-left: 20px;margin-top:-7px;">&#9776;</span> <img src="~/cordex-removebg-preview.png" style="margin-left: -20px; height: 70%; transform: translate(15%);" /></span>
        </div>

        <script>
            var sideBarOpen = false;
            function openNav() {
                document.getElementById("mySidenav").style.width = "250px";
            }

            function closeNav() {
                document.getElementById("mySidenav").style.width = "0";
            }
            function OpenOrCloseNav(top) {
                if (top) {
                    document.getElementById("mySidenav").style.width = "0";
                    top = false;
                    sideBarOpen = top;
                }
                else {
                    document.getElementById("mySidenav").style.width = "250px";
                    top = true;
                    sideBarOpen = top;
                }
            }
            document.addEventListener('click', function (e) {
                if (sideBarOpen) {
                    if (document.getElementById('mySidenav').contains(e.target) || document.getElementById('openSideBar').contains(e.target)) {
                        // Clicked in box
                    } else {
                        OpenOrCloseNav(true);
                    }
                }
            });

        </script>
    </header>
    <div class="container" onclick="OpenOrCloseNav(true)" style="margin-top:-5%">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #82c921; border-top-left-radius: 40px 30px; border-top-right-radius: 40px 30px; height:50px; }">
        <div class="container">
            <p id="imagesOnFooter"> <img src="https://www.pikpng.com/pngl/m/255-2557714_gift-vector-blue-box-green-gift-box-vector.png" style="height:40px" /><img src="https://www.pikpng.com/pngl/m/255-2557714_gift-vector-blue-box-green-gift-box-vector.png" style="height:40px" /></p>
            @*&copy; 2022 - WebApplication_pwa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
    <script src="~/flickity.pkgd.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script>navigator.serviceWorker.register('service-worker.js');</script>*@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
